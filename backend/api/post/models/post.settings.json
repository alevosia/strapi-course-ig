{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "likes": {
      "type": "integer",
      "default": 0,
      "required": true,
      "min": 0
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    }
  }
}
